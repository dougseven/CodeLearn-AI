{
  "name": "codelearn-landing-page",
  "version": "1.0.0",
  "description": "CodeLearn AI landing page - static frontend for AI-powered coding education platform",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "lighthouse": "lhci autorun",
    "lint:js": "eslint frontend/scripts/**/*.js",
    "lint:css": "stylelint 'frontend/styles/**/*.css'",
    "lint": "npm run lint:js && npm run lint:css",
    "serve": "python3 -m http.server 8000 --directory frontend"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "playwright": "^1.40.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^35.0.0"
  },
  "keywords": [
    "education",
    "ai",
    "coding",
    "landing-page"
  ],
  "author": "Doug Saven",
  "license": "MIT"
}
